<%provide(:title, 'パスワード再設定')%>
<div class="form">
  <h2>パスワードの再設定</h2>
  <%= form_with(model: @user, url:password_reset_path(params[:id]), local:true) do |f| %>
    <%= hidden_field_tag :email, @user.email %>
    <%= f.label :password, '新しいパスワード' %>
    <%= f.password_field :password %>
    <%= render 'shared/form_error_messages', object: f.object, attribute: :password %>
    <%= f.label :password_confirmation,'パスワード再入力' %>
    <%= f.password_field :password_confirmation %>
    <%= render 'shared/form_error_messages', object: f.object, attribute: :password_confirmation %>
    <%= f.submit "パスワードを更新する", class: "form__btn btn--navy", id: "login-btn" %>
  <% end %>
</div>
