<% provide(:title, 'ユーザー一覧') %>
<% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<h1>ユーザー一覧</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      <% if !current_user?(user) %>
      | <%= link_to "削除", user, method: :delete,
                                  data: { confirm: "本当に削除しますか？" } %> 
      <% end %>
    </li>
  <% end %>
</ul>


<%= paginate @users %>